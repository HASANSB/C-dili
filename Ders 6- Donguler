#include <stdio.h>
#include <stdlib.h>

/*
Neler ogrenecgiz?
    - for dongusu
    - while ve do-while dongusu
    - break ve continue kullanimi
*/

int main()
{
    /* -----------------------------
       1) FOR DONGUSU
       -----------------------------
       Yapisi: for(baslangic; kosul; artirim/azaltim)
       Kosul true oldugu surece dongu devam eder
    */

    printf("FOR dongusu ornegi:\n");
    for(int i=1; i<=5; i++) // i 1'den baslayip 5'e kadar (5 dahil) doner
    {
        printf("Bu %d. dongu\n", i);
    }

    /* -----------------------------
       2) WHILE DONGUSU
       -----------------------------
       Kosul true oldugu surece dongu devam eder
       Baslangicta sayaci ayarlamak gerekir
    */
    int j = 1;
    printf("\nWHILE dongusu ornegi:\n");
    while(j <= 5) // j 5'e kadar doner
    {
        printf("Bu %d. dongu\n", j);
        j++; // sayaci artir
    }

    /* -----------------------------
       3) DO-WHILE DONGUSU
       -----------------------------
       Dongu en az bir kere calisir, kosul en sonda kontrol edilir
    */
    int k = 1;
    printf("\nDO-WHILE dongusu ornegi:\n");
    do
    {
        printf("Bu %d. dongu\n", k);
        k++;
    } while(k <= 5);

    /* -----------------------------
       4) BREAK KULLANIMI
       -----------------------------
       Donguyu kosul saglansa bile zorla sonlandirmak icin kullanilir
    */
    printf("\nBREAK kullanimi:\n");
    for(int a = 1; a <= 10; a++)
    {
        if(a == 4) // a 4 olunca donguyu bitir
        {
            printf("Dongu break ile sonlandi\n");
            break;
        }
        printf("a = %d\n", a);
    }

    /* -----------------------------
       5) CONTINUE KULLANIMI
       -----------------------------
       Dongunun geri kalan adimini atlayip bir sonraki iterasyona gecmek icin kullanilir
    */
    printf("\nCONTINUE kullanimi:\n");
    for(int b = 1; b <= 5; b++)
    {
        if(b == 3) // b 3 olursa yazdirma
        {
            printf("b = 3 atlandi\n");
            continue;
        }
        printf("b = %d\n", b);
    }

    return 0;
}
